{
    "kind": "collectionType",
    "collectionName": "orders",
    "info": {
        "singularName": "order",
        "pluralName": "orders",
        "displayName": "Order",
        "description": ""
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "order_number": {
            "type": "string",
            "unique": true
        },
        "customer_email": {
            "type": "email",
            "required": true
        },
        "customer_name": {
            "type": "string"
        },
        "shipping_address": {
            "type": "json"
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "pending",
                "processing",
                "shipped",
                "delivered",
                "cancelled"
            ],
            "default": "pending"
        },
        "total": {
            "type": "decimal"
        },
        "items": {
            "type": "component",
            "repeatable": true,
            "component": "orders.order-item"
        },
        "stripe_session_id": {
            "type": "string",
            "private": true
        },
        "customer": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::customer.customer",
            "inversedBy": "orders"
        }
    }
}